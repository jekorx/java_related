<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--引入公共配置-->
    <import resource="amq-common.xml"/>
    <!--配置消息监听-->
    <bean id="customerMessageListener" class="com.jms.amq.customer.CustomerMessageListener"/>
    <!--配置消息容器-->
    <bean id="jmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="messageListener" ref="customerMessageListener"/>
        <property name="destinationName" value="queue://spring.queue"/>
        <!--<property name="destinationName" value="topic://spring.topic"/>-->
    </bean>

</beans>